{% extends "base.html.twig" %}

{% block title %}Article{% endblock %}
{% block head %}
    {{ parent() }}
{% endblock %}
{% block content %}
    <div id="content" class="container">
        <main class="pb-5">
            <article class="my-5 text-center">
                <h1 class="display-2">{{ post.title }}</h1>
                <p class="text-muted">Publié le {{ post.created_at|date("d/m/Y à H:i:s") }} - auteur : {{author.username}}</p>
                <img class="card-img-top mb-5" src="https://picsum.photos/900/400">
                <p class="badge rounded-pill bg-secondary">{{ post.slug }}</p>
                <div class="fw-bold display-6 mb-4">
                    {{ post.lead_sentence }}
                </div>
                <div class="">
                    {{ post.content }}
                </div>
            </article>
            {{ include('comments.html.twig') }}
        </main>
    </div>
{% endblock %}